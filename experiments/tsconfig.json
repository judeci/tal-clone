{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["es2021", "dom"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
